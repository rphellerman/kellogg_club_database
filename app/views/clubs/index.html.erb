<div class="page-header">
  <h1>
    Clubs
    <a href="/clubs/new" class="btn btn-lg btn-success">New Club</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>

      <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= club.category_id %></td>
        <td>
          <a href="/clubs/<%= club.id %>" class="btn btn-primary">Show</a>
          <a href="/clubs/<%= club.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_club/<%= club.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
