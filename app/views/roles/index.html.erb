<div class="page-header">
  <h1>
    Roles
    <a href="/roles/new" class="btn btn-lg btn-success">New Role</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Roles Available</th>
        <th>Eligibility</th>
        <th>Time commitment (hours per week)</th>
        <th>Club</th>
        <th>Actions</th>
      </tr>

      <% @roles.each do |role| %>
      <tr>
        <td><%= role.title %></td>
        <td><%= role.description %></td>
        <td><%= role.available %></td>
        <td><%= role.eligibility %></td>
        <td><%= role.time_commitment %></td>
        <td>
          <a href="/clubs/<%= role.club_id %>">
            <%= role.club.name %>
          </a>
        </td>
        <td>
          <a href="/roles/<%= role.id %>" class="btn btn-primary">Show</a>
          <a href="/roles/<%= role.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_role/<%= role.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
